<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:textAlignment="center"
    tools:context=".Fragment_Perimetro_Hexagono">

    <EditText
        android:id="@+id/editTex_perimetro"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="430dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView_perimetro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="430dp"
        android:text="@string/perimetro"
        android:textColor="#191818"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTex_longitud"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="330dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView_lados2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="330dp"
        android:text="@string/longitud"
        android:textColor="#191818"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Titulo_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/perimetro_hex"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView_hexagono"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_marginTop="90dp"
        android:contentDescription="@string/hexagon"
        android:src="@drawable/ic_regular_hexagon" />

    <TextView
        android:id="@+id/textView_lados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="280dp"
        android:text="@string/lados"
        android:textColor="#191818"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTex_lados"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="280dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        android:autofillHints=""
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/button_calculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="375dp"
        android:text="@string/calculo" />

</FrameLayout>