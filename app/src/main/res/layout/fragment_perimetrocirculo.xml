<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.PerimetrocirculoFragment">

    <ImageView
        android:id="@+id/circuloPerimetro_img"
        android:layout_width="125dp"
        android:layout_height="136dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_radio" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/valorRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ingresarRadio" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/calcularPerimetroCir_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0DCACA"
        android:text="@string/calcularPerimetroCir"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF" />

    <TextView
        android:id="@+id/resultado_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/resultadoCirculo" />


</LinearLayout>